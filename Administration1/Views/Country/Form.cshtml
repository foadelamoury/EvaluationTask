@using Application.Features.Country.Models
@model CountryDTO
@{
    Layout = "_Layout";
    var TableName = "Country";
   
    if (Model.Id > 0)
    {
    ViewData["Title"] = "Edit " +TableName + ":" + @Model.NameA;
        <h1>@ViewData["Title"]</h1>
    } 
    
   
  else
  {
        ViewData["Title"] = "Add " + TableName;
        <h1>@ViewData["Title"]</h1>

  }
}

   

<form asp-action="Form" method="post"  enctype="multipart/form-data">
   
        @if (Model.Id > 0)
        {
            <input type="hidden" asp-for="Id" />

            <div class="form-group col-md-6">
                الاسم
                <input asp-for="NameA" value="@Html.DisplayFor(modelItem => Model.NameA)" />
                <span asp-validation-for="NameA"></span>
            </div>

            <div class="form-group col-md-6">
                Name
                <input asp-for="NameE" value="@Html.DisplayFor(modelItem => Model.NameE)" />
                <span asp-validation-for="NameE"></span>
            </div>
        }
    <input type="hidden" asp-for="Id" />
    <div class="form-group col-md-6">
        الاسم
        <input asp-for="NameA"/>
        <span asp-validation-for="NameA"></span>
    </div>

       <div class="form-group col-md-6">
        Name
        <input asp-for="NameE"/>
        <span asp-validation-for="NameE"></span>
    </div>

    <input type="submit" class="btn btn-primary btn-main-bg m-1" placeholder="حفظ"/>
	
</form>