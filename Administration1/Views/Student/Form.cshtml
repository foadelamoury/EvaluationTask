@using Application.Features.Student.Models
@model StudentDTO
@{
    Layout = "_Layout";
    var TableName = "Student";
 

    if (Model.Id > 0)
    {
    ViewData["Title"] = "Edit " +TableName + ":" + @Model.NameA;
        <h1>@ViewData["Title"]</h1>
    } 
    
   
  else
  {
        ViewData["Title"] = "Add " + TableName;
        <h1>@ViewData["Title"]</h1>

  }
}

   

<form asp-action="Form" method="post"  enctype="multipart/form-data">
   
      

          
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="photoFile" />
    <input type="hidden" asp-for="PhotoName" />

    <div class="form-group col-md-6">
        الاسم
        <input asp-for="NameA"/>
        <span asp-validation-for="NameA"></span>
    </div>

       <div class="form-group col-md-6">
        Name
        <input asp-for="NameE"/>
        <span asp-validation-for="NameE"></span>
    </div>

   
   
    <div class="form-group col-md-6">
        Photo
        <input type="file" asp-for="PhotoName" />
        <span asp-validation-for="PhotoName"></span>
    </div>




        <div class="form-group col-md-6">
       @* <Dropdown asp-for="@Model.CountryId" col="col-md-12" required="Required" 
        error-message="PleaseEnter Country" asp-items="@ViewBag.Countries" 
        id="CountryId" label-content="Country"></Dropdown>*@
            </div>

        <Select asp-items="@ViewBag.Countries">

                <option selected="selected">اختر</option>
                
            </Select>



    <Select asp-items="@ViewBag.Cities">

        <option selected="selected">اختر</option>

    </Select>


    <input type="submit" class="btn btn-primary btn-main-bg m-1" value="حفظ" />

    <a href="@Url.ActionLink("index")" aria-expanded="false" 
    class="btn btn-primary bg-primary-700 text-white btn-icon rounded-circle mx-1 waves-effect waves-themed" 
    style="font-size:large">
    <i class="fa fa-edit " data-toggle="tooltip" data-placement="top">الرجوع</i></a>

	
</form>

<script>
    $("#CountryId").select2({ containerCssClass: "CountryId" });
  
